// TEST 13: Struct Tanımlama ve Kullanımı
// Beklenen: Struct tanımlama ve üye erişiminin çalışması

struct Point {
    x: i32,
    y: i32
}

struct Person {
    name: str,
    age: i32
}

fn main(): i32 {
    echo("=== TEST 13: STRUCT TANIMLAMA ===\n");
    
    // Point struct
    var p: Point;
    p.x = 10;
    p.y = 20;
    echo("Point: x = {p.x}, y = {p.y}\n");
    
    // Person struct
    var kisi: Person;
    kisi.name = "Ahmet";
    kisi.age = 30;
    echo("Person: name = {kisi.name}, age = {kisi.age}\n");
    
    // Struct güncelleme
    p.x = 50;
    echo("Güncellenmiş Point: x = {p.x}\n");
    
    echo("\n=== TEST 13 TAMAMLANDI ===\n");
    return 0;
}
