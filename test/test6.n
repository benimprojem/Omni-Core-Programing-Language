// TEST 6: While Döngüsü
// Beklenen: While döngüsünün doğru çalışması

fn main(): i32 {
    echo("=== TEST 6: WHILE DÖNGÜSÜ ===\n");
    
    // Basit while
    var i: i32 = 1;
    echo("1'den 5'e kadar sayma:\n");
    while (i <= 5) {
        echo("{i} ");
        i = i + 1;
    }
    echo("\n");
    
    // Geri sayım
    var j: i32 = 5;
    echo("5'ten 1'e geri sayım:\n");
    while (j > 0) {
        echo("{j} ");
        j = j - 1;
    }
    echo("\n");
    
    // Koşullu while
    var toplam: i32 = 0;
    var k: i32 = 1;
    while (toplam < 50) {
        toplam = toplam + k;
        k = k + 1;
    }
    echo("Toplam 50'yi geçene kadar: {toplam}\n");
    
    echo("\n=== TEST 6 TAMAMLANDI ===\n");
    return 0;
}
