// TEST 7: For Döngüsü (Range)
// Beklenen: Range tabanlı for döngüsünün doğru çalışması

fn main(): i32 {
    echo("=== TEST 7: FOR DÖNGÜSÜ (RANGE) ===\n");
    
    // Basit range
    echo("0'dan 5'e kadar:\n");
    for (i in 0..5) {
        echo("{i} ");
    }
    echo("\n");
    
    // Farklı range
    echo("10'dan 15'e kadar:\n");
    for (j in 10..15) {
        echo("{j} ");
    }
    echo("\n");
    
    // Range ile toplam
    var toplam: i32 = 0;
    for (k in 1..11) {
        toplam = toplam + k;
    }
    echo("1'den 10'a kadar toplam: {toplam}\n");
    
    // İç içe for
    echo("Çarpım tablosu (3x3):\n");
    for (x in 1..4) {
        for (y in 1..4) {
            var carpim: i32 = x * y;
            echo("{carpim} ");
        }
        echo("\n");
    }
    
    echo("\n=== TEST 7 TAMAMLANDI ===\n");
    return 0;
}
