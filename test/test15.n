// TEST 15: İç İçe Yapılar
// Beklenen: İç içe döngüler, fonksiyonlar ve koşulların çalışması

fn fibonacci(n: i32): i32 {
    if (n <= 1) {
        return n;
    }
    return fibonacci(n - 1) + fibonacci(n - 2);
}

fn asal_mi(n: i32): bool {
    if (n < 2) {
        return false;
    }
    var i: i32 = 2;
    while (i * i <= n) {
        if (n % i == 0) {
            return false;
        }
        i = i + 1;
    }
    return true;
}

fn main(): i32 {
    echo("=== TEST 15: İÇ İÇE YAPILAR ===\n");
    
    // Fibonacci serisi
    echo("Fibonacci(0-7): ");
    for (i in 0..8) {
        var fib: i32 = fibonacci(i);
        echo("{fib} ");
    }
    echo("\n");
    
    // Asal sayılar
    echo("1-20 arası asal sayılar: ");
    for (n in 1..21) {
        if (asal_mi(n)) {
            echo("{n} ");
        }
    }
    echo("\n");
    
    // İç içe döngü ile pattern
    echo("Pattern:\n");
    for (i in 1..6) {
        for (j in 1..i+1) {
            echo("* ");
        }
        echo("\n");
    }
    
    echo("\n=== TEST 15 TAMAMLANDI ===\n");
    return 0;
}
