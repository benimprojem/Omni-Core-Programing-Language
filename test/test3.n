// TEST 3: Aritmetik Operatörler
// Beklenen: +, -, *, /, % operatörlerinin doğru çalışması

fn main(): i32 {
    echo("=== TEST 3: ARİTMETİK OPERATÖRLER ===\n");
    
    var a: i32 = 15;
    var b: i32 = 4;
    
    echo("a = {a}, b = {b}\n");
    
    // Toplama
    var toplam: i32 = a + b;
    echo("a + b = {toplam}\n");
    
    // Çıkarma
    var fark: i32 = a - b;
    echo("a - b = {fark}\n");
    
    // Çarpma
    var carpim: i32 = a * b;
    echo("a * b = {carpim}\n");
    
    // Bölme
    var bolum: i32 = a / b;
    echo("a / b = {bolum}\n");
    
    // Modulo
    var kalan: i32 = a % b;
    echo("a % b = {kalan}\n");
    
    // Float aritmetiği
    var x: f64 = 10.5;
    var y: f64 = 2.5;
    var sonuc: f64 = x * y;
    echo("Float: {x} * {y} = {sonuc}\n");
    
    echo("\n=== TEST 3 TAMAMLANDI ===\n");
    return 0;
}