// TEST 8: Fonksiyonlar
// Beklenen: Fonksiyon tanımlama ve çağırmanın doğru çalışması

fn topla(a: i32, b: i32): i32 {
    return a + b;
}

fn selamla(isim: str): void {
    echo("Merhaba, {isim}!\n");
}

fn faktoriyel(n: i32): i32 {
    if (n <= 1) {
        return 1;
    }
    var sonuc: i32 = n * faktoriyel(n - 1);
    return sonuc;
}

fn main(): i32 {
    echo("=== TEST 8: FONKSİYONLAR ===\n");
    
    // Basit fonksiyon çağrısı
    var sonuc: i32 = topla(5, 3);
    echo("topla(5, 3) = {sonuc}\n");
    
    // Void fonksiyon
    selamla("NIMBLE");
    
    // Recursive fonksiyon
    var fakt: i32 = faktoriyel(5);
    echo("faktoriyel(5) = {fakt}\n");
    
    // Çoklu çağrı
    var x: i32 = topla(10, 20);
    var y: i32 = topla(x, 5);
    echo("topla(topla(10, 20), 5) = {y}\n");
    
    echo("\n=== TEST 8 TAMAMLANDI ===\n");
    return 0;
}
