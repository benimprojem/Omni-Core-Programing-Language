// TEST 5: If-Else Kontrol Yapısı
// Beklenen: Koşullu dallanmanın doğru çalışması

fn main(): i32 {
    echo("=== TEST 5: IF-ELSE KONTROL YAPISI ===\n");
    
    var sayi: i32 = 15;
    echo("Sayı: {sayi}\n");
    
    // Basit if
    if (sayi > 10) {
        echo("Sayı 10'dan büyük\n");
    }
    
    // If-else
    if (sayi < 0) {
        echo("Sayı negatif\n");
    } else {
        echo("Sayı pozitif veya sıfır\n");
    }
    
    // İç içe if
    if (sayi > 0) {
        if (sayi < 20) {
            echo("Sayı 0 ile 20 arasında\n");
        } else {
            echo("Sayı 20 veya daha büyük\n");
        }
    }
    
    // Çoklu koşul
    var yas: i32 = 25;
    if (yas < 18) {
        echo("Reşit değil\n");
    } else {
        if (yas < 65) {
            echo("Yetişkin\n");
        } else {
            echo("Yaşlı\n");
        }
    }
    
    echo("\n=== TEST 5 TAMAMLANDI ===\n");
    return 0;
}
