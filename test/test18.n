// TEST 18: ANSI Stil Sistemi
// Beklenen: Renkli çıktı ve stil tanımlamalarının çalışması

style basari = "\x1b[32m";
style hata = "\x1b[31m";
style uyari = "\x1b[33m";
style bilgi = "\x1b[36m";

fn main(): i32 {
    echo("=== TEST 18: ANSI STİL SİSTEMİ ===\n");
    
    // Yerleşik stiller
    print("success", "Bu bir başarı mesajı\n");
    print("error", "Bu bir hata mesajı\n");
    print("warn", "Bu bir uyarı mesajı\n");
    print("info", "Bu bir bilgi mesajı\n");
    
    // Kullanıcı tanımlı stiller
    print("basari", "Özel başarı stili\n");
    print("hata", "Özel hata stili\n");
    print("uyari", "Özel uyarı stili\n");
    print("bilgi", "Özel bilgi stili\n");
    
    // Normal çıktı
    echo("Normal çıktı (renksiz)\n");
    
    echo("\n=== TEST 18 TAMAMLANDI ===\n");
    return 0;
}
