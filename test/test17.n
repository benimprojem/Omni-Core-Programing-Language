// TEST 17: Unary Operatörler
// Beklenen: -, !, ++, -- operatörlerinin çalışması

fn main(): i32 {
    echo("=== TEST 17: UNARY OPERATÖRLER ===\n");
    
    // Negatif operatör
    var x: i32 = 10;
    var y: i32 = -x;
    echo("x = {x}, -x = {y}\n");
    
    // NOT operatörü
    var flag: bool = true;
    if (!flag) {
        echo("!true = false\n");
    } else {
        echo("!true değil, true\n");
    }
    
    // Post-increment
    var a: i32 = 5;
    var b: i32 = a++;
    echo("a = {a}, b (eski a) = {b}\n");
    
    // Post-decrement
    var c: i32 = 10;
    var d: i32 = c--;
    echo("c = {c}, d (eski c) = {d}\n");
    
    // Float ile negatif
    var f: f64 = 3.14;
    var g: f64 = -f;
    echo("f = {f}, -f = {g}\n");
    
    echo("\n=== TEST 17 TAMAMLANDI ===\n");
    return 0;
}
