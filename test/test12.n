// TEST 12: Break ve Continue
// Beklenen: Break ve continue ifadelerinin döngülerde doğru çalışması

fn main(): i32 {
    echo("=== TEST 12: BREAK VE CONTINUE ===\n");
    
    // Break ile döngüden çıkış
    echo("Break testi (10'a kadar say, 5'te dur):\n");
    var i: i32 = 0;
    while (i < 10) {
        if (i == 5) {
            break;
        }
        echo("{i} ");
        i = i + 1;
    }
    echo("\n");
    
    // Continue ile atlama
    echo("Continue testi (çift sayıları atla):\n");
    for (j in 0..10) {
        if (j % 2 == 0) {
            continue;
        }
        echo("{j} ");
    }
    echo("\n");
    
    // İç içe döngüde break
    echo("İç içe döngüde break:\n");
    for (x in 1..4) {
        for (y in 1..4) {
            if (y == 3) {
                break;
            }
            echo("{x},{y} ");
        }
        echo("\n");
    }
    
    echo("\n=== TEST 12 TAMAMLANDI ===\n");
    return 0;
}
