// TEST 2: Değişken Tanımlama ve Atama
// Beklenen: Farklı tiplerde değişken tanımlama ve değer atama

fn main(): i32 {
    echo("=== TEST 2: DEĞİŞKEN TANIMLAMA ===\n");
    
    // Integer değişken
    var x: i32 = 10;
    echo("x = ");
    echo("{x}\n");
    
    // Float değişken
    var pi: f64 = 3.14159;
    echo("pi = ");
    echo("{pi}\n");
    
    // String değişken
    var name: str = "NIMBLE";
    echo("name = ");
    echo("{name}\n");
    
    // Boolean değişken
    var flag: bool = true;
    echo("flag = ");
    echo("{flag}\n");
    
    // Değişken güncelleme
    x = 20;
    echo("x güncellendi = ");
    echo("{x}\n");
    
    echo("\n=== TEST 2 TAMAMLANDI ===\n");
    return 0;
}
