// TEST 19: Karmaşık Array İşlemleri
// Beklenen: Array manipülasyonu ve algoritmalar

fn bul_max(arr: arr): i32 {
    var max: i32 = arr[0];
    var len: i32 = arrlen(arr);
    var i: i32 = 1;
    while (i < len) {
        if (arr[i] > max) {
            max = arr[i];
        }
        i = i + 1;
    }
    return max;
}

fn bul_min(arr: arr): i32 {
    var min: i32 = arr[0];
    for (eleman in arr) {
        if (eleman < min) {
            min = eleman;
        }
    }
    return min;
}

fn toplam(arr: arr): i32 {
    var sum: i32 = 0;
    for (eleman in arr) {
        sum = sum + eleman;
    }
    return sum;
}

fn main(): i32 {
    echo("=== TEST 19: KARMAŞIK ARRAY İŞLEMLERİ ===\n");
    
    var sayilar: arr = [45, 12, 78, 23, 56, 89, 34];
    echo("Array: [45, 12, 78, 23, 56, 89, 34]\n");
    
    // Maksimum bulma
    var max: i32 = bul_max(sayilar);
    echo("Maksimum: {max}\n");
    
    // Minimum bulma
    var min: i32 = bul_min(sayilar);
    echo("Minimum: {min}\n");
    
    // Toplam
    var sum: i32 = toplam(sayilar);
    echo("Toplam: {sum}\n");
    
    // Ortalama
    var len: i32 = arrlen(sayilar);
    var ort: i32 = sum / len;
    echo("Ortalama: {ort}\n");
    
    // Array elemanlarını yazdırma
    echo("Elemanlar: ");
    for (s in sayilar) {
        echo("{s} ");
    }
    echo("\n");
    
    echo("\n=== TEST 19 TAMAMLANDI ===\n");
    return 0;
}
