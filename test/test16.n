// TEST 16: Mantıksal Operatörler
// Beklenen: && (and) ve || (or) operatörlerinin çalışması

fn main(): i32 {
    echo("=== TEST 16: MANTIKSAL OPERATÖRLER ===\n");
    
    var a: bool = true;
    var b: bool = false;
    
    echo("a = true, b = false\n");
    
    // AND operatörü
    if (a && b) {
        echo("a && b: true\n");
    } else {
        echo("a && b: false\n");
    }
    
    // OR operatörü
    if (a || b) {
        echo("a || b: true\n");
    } else {
        echo("a || b: false\n");
    }
    
    // Karmaşık koşul
    var x: i32 = 15;
    if (x > 10 && x < 20) {
        echo("x 10 ile 20 arasında\n");
    }
    
    // Çoklu koşul
    var yas: i32 = 25;
    var ehliyet: bool = true;
    if (yas >= 18 && ehliyet) {
        echo("Araba kullanabilir\n");
    } else {
        echo("Araba kullanamaz\n");
    }
    
    // OR ile varsayılan değer kontrolü
    var sayi: i32 = 0;
    if (sayi == 0 || sayi > 100) {
        echo("Sayı 0 veya 100'den büyük\n");
    }
    
    echo("\n=== TEST 16 TAMAMLANDI ===\n");
    return 0;
}
